<h1>Listing beers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th></th>
      <th></th>
      <th>Avg score</th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><% if beer.ratings.empty? %>
            beer has not yet been rated!
        <% else %>
           <%= beer.average_rating%>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p> <%=link_to 'List of breweries', breweries_path%> </p>


