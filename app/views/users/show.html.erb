<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>
<p>Ratings: <%= @user.ratings.count%></p>

<p>
<% if @user.memeberships.count == 0 %>
      You haven't joined a club yet!
  <% else%>
    <% @user.memeberships.each do |membership| %>
      <%= link_to membership.beer_club, beer_club_path(membership.beer_club)%>
    <% end %>
<% end %>
</p>

<ul>
  <% @user.ratings.each do |rating| %>
      <li>
        <%= rating %>
        <% if @user == current_user %>
            <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </li>
  <% end %>
</ul>

<p><% if @user.ratings.empty? %>
    You have not rated anything yet!
<% else%>
    <p>Average score:<%= @user.average_rating%></p>
<% end %>
</p>

<% if @user == current_user %>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Delete account', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
